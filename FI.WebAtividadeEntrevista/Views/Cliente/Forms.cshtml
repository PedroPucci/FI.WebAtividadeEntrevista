<form id="formCadastro" method="post">
    <input type="hidden" id="Id" name="Id" value="@(Model != null ? Model.Id : 0)" />

    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label for="Nome">Nome:</label>
                <input required="required" type="text" class="form-control" id="Nome" name="Nome" placeholder="Ex.: João" maxlength="50">
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label for="Sobrenome">Sobrenome:</label>
                <input required="required" type="text" class="form-control" id="Sobrenome" name="Sobrenome" placeholder="Ex.: da Silva" maxlength="255">
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label for="CPF">CPF:</label>
                <input required="required" type="text" class="form-control" id="CPF" name="CPF" placeholder="Ex.: 123.456.789-00" maxlength="14">
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label for="Nacionalidade">Nacionalidade:</label>
                <input required="required" type="text" class="form-control" id="Nacionalidade" name="Nacionalidade" placeholder="Ex.: brasileira" maxlength="50">
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <label for="CEP">CEP:</label>
                <input required="required" type="text" class="form-control" id="CEP" name="CEP" placeholder="Ex.: 01011-100" maxlength="9">
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label for="Estado">Estado:</label>
                <select required="required" id="Estado" class="form-control" name="Estado">
                    <option value="">Selecione</option>
                    <option value="SP">São Paulo</option>
                    <option value="PE">Pernambuco</option>
                </select>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label for="Cidade">Cidade:</label>
                <input required="required" type="text" class="form-control" id="Cidade" name="Cidade" maxlength="50" placeholder="Ex.: São Paulo">
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="form-group">
                <label for="Logradouro">Logradouro:</label>
                <input required="required" type="text" class="form-control" id="Logradouro" name="Logradouro" placeholder="Ex.: Rua Boa Vista 253" maxlength="500">
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label for="Email">E-mail:</label>
                <input required="required" type="text" class="form-control" id="Email" name="Email" placeholder="Ex.: email@email.com" maxlength="2079">
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label for="Telefone">Telefone:</label>
                <input required="required" type="tel" class="form-control" id="Telefone" name="Telefone" placeholder="Ex.: (11) 2020-3030" maxlength="15">
            </div>
        </div>
    </div>

    <!-- Modal Beneficiários -->
    <div class="modal fade" id="modalBeneficiarios" tabindex="-1" role="dialog" aria-labelledby="modalBeneficiariosLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header" style="display: flex; justify-content: space-between; align-items: center;">
                    <h5 class="modal-title mb-0" id="modalBeneficiariosLabel">Beneficiários</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Fechar"
                            style="font-size: 2rem; line-height: 1; padding: 0 12px;">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>

                <div class="modal-body">
                    <div class="form-row" style="display: flex; align-items: flex-end; gap: 10px; margin-bottom: 20px;">
                        <div style="flex: 1;">
                            <label for="beneficiarioCPF">CPF:</label>
                            <input required type="text" class="form-control" id="beneficiarioCPF" placeholder="Ex: 010.011.111-00">
                        </div>
                        <div style="flex: 1;">
                            <label for="beneficiarioNome">Nome:</label>
                            <input required type="text" class="form-control" id="beneficiarioNome" placeholder="Ex: Maria">
                        </div>
                        <div style="width: 100px;">
                            <button type="button" class="btn btn-success w-100" onclick="incluirBeneficiario()">Incluir</button>
                        </div>
                    </div>

                    <table class="table" style="width: 100%; border-collapse: collapse;">
                        <thead>
                            <tr style="border-bottom: 1px solid #dee2e6;">
                                <th style="padding: 12px 8px; font-weight: bold;">CPF</th>
                                <th style="padding: 12px 8px; font-weight: bold;">Nome</th>
                                <th class="text-align" style="padding: 12px 8px; font-weight: bold;">Ações</th>
                            </tr>
                        </thead>
                        <tbody id="listaBeneficiarios">
                            <tr style="border-bottom: 1px solid #dee2e6;">
                                <td class="text-center" style="padding: 12px 8px;"></td>
                            </tr>
                        </tbody>
                    </table>

                </div>
            </div>
        </div>
    </div>

    <div class="row mt-2">
        <div class="col-sm-6">
            <!-- Botão -->
            <button type="button" class="btn btn-sm btn-primary" data-toggle="modal" data-target="#modalBeneficiarios">
                Beneficiários
            </button>
        </div>
        <div class="col-sm-6">
            <div class="pull-right">
                <button class="btn btn-sm btn-success" onclick="incluirCliente()">Salvar</button>
                @Html.ActionLink("Voltar", "Index", "Cliente", new { }, new { @class = "btn btn-sm btn-danger" })
            </div>
        </div>
    </div>
</form>


@Scripts.Render("~/Scripts/Clientes/FI.Beneficiarios.js")
@Scripts.Render("~/Scripts/Clientes/FI.Clientes.js")